<Window x:Class="LDVELH_WPF.MessageBoxInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Core="clr-namespace:LDVELH_WPF;assembly=" 
        Title="{Core:Translator Text=SelectCharacterName}" Height="106" Width="300" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="buttonOK" Content="{Core:Translator Text=OK}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="108,44,0,0" Click="buttonOK_Click"/>
        <Label x:Name="labelContent" Content="{Core:Translator Text=EnterCharacterName}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="14,7,0,0"/>
        <TextBox x:Name="textBoxCharacterName" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="146,10,0,0"/>

    </Grid>
</Window>
